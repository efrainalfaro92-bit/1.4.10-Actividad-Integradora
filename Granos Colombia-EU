  new Chart(ctx1, {
    type: 'bar',
    data: {
      labels: ['Manizales → Sarajevo', 'Manizales → Polonia', 'Pereira → Ucrania', 'Armenia → Polonia'],
      datasets: [{
        label: 'Toneladas enviadas (Escenario 1)',
        data: [75000, 25000, 150000, 95000],
        backgroundColor: ['#4e79a7', '#f28e2b', '#e15759', '#76b7b2']
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Asignación Óptima de Granos – Escenario 1 (Oferta = Demanda)'
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return value / 1000 + 'k';
            }
          }
        }
      }
    }
  });

  // Gráfico 2: Distribución de envíos Escenario 2
  const ctx2 = document.getElementById('chart2').getContext('2d');
  new Chart(ctx2, {
    type: 'bar',
    data: {
      labels: ['Pereira → Ucrania', 'Armenia → Polonia', 'Manizales → Sarajevo', 'Manizales → Polonia'],
      datasets: [{
        label: 'Toneladas enviadas (Escenario 2)',
        data: [130000, 85000, 75000, 10000],
        backgroundColor: ['#e15759', '#76b7b2', '#4e79a7', '#f28e2b']
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Asignación Óptima de Granos – Escenario 2 (Oferta < Demanda)'
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return value / 1000 + 'k';
            }
          }
        }
      }
    }
  });

  // Gráfico 3: Porcentaje de demanda satisfecha – Escenario 2
  const ctx3 = document.getElementById('chart3').getContext('2d');
  new Chart(ctx3, {
    type: 'pie',
    data: {
      labels: ['Sarajevo (100%)', 'Ucrania (86.7%)', 'Polonia (79.2%)'],
      datasets: [{
        data: [100, 86.7, 79.2],
        backgroundColor: ['#4e79a7', '#e15759', '#76b7b2']
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Porcentaje de Demanda Satisfecha – Escenario 2'
        }
      }
